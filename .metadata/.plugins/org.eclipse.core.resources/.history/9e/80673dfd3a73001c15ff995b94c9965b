package Ch5;
/*
 * 날짜
 * 이름 
 * 내용 : 자바 클래스 실습하기 교재 p140
 */
public class Sub_ClassTest {
	
	public static void main(String[] args) {
		
		
		// Car객체 생성
		Car sonata = new Car("소나타", "흰색", 0);//소나타는 참조변수
		public sonata.name = "소나타";
		sonata.color = "흰색";
		
		
		
		sonata.speedUp(100);
		sonata.speedDown(60);
		sonata.show();
		
		// bmw 객체 생성
		Car bmw = new Car("520d", "남색", 0);
		
		//객체 초기화
		
	
        bmw.speedUp(60);		
        bmw.speedDown(60);		
        bmw.show();		
        
        //
		Account kb = new Account("국민은행", "101-12-1010", "김유신", 10000);
		
		kb.deposit(40000);
		kb.withdraw(5000);
		
		//참조변수로 객체의 변수를 직접 참조해서 취약점 발생
		kb.balance--;
		kb.show();
		
		Account wr = new Account();
		wr.bank = "우리은행";
		wr.id   = "111-11-1012";
		wr.name = "김춘추";
		wr.balance = 30000;
		
		wr.deposit(10000);
		wr.withdraw(12000);
	    wr.show();
		
		
		
	}

}
