package test3;

/*
 * 날짜 : 2022/01/12
 * 이름 : 김병현
 * 내용 : 자바 클래스 연습문제
 */

public class Ex01 {
	
	private String name;
	private int age;
	
	public Ex01(String name, int age) {
		this.name = name;
		this.age = age;
	}
	
	public void show() {
		System.out.println("================");
		System.out.println("이름 : "+this.name);
		System.out.println("나이 : "+this.age);
		System.out.println("================");
	}
	
	public static void main(String[] args) {
		Ex01 kim = new Ex01; 
		Ex02 lee = new Ex02;	
		
		kim.show();
		lee.show();
		

		
	}

}
